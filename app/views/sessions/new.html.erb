<%= form_for :session, url: sessions_path do |f| %>
    <div class="ui form">
      <%= content_tag :div, class: @error ? 'error field' : 'field' do %>
          <%= f.label :email, 'Email' %>
          <div class="ui left labeled icon input">
            <%= f.text_field :email, placeholder: '请填写注册使用的Email' %>
            <i class="user icon"></i>
          </div>
      <% end %>
      <%= content_tag :div, class: @error ? 'error field' : 'field' do %>
          <%= f.label :password, '密码' %>
          <div class="ui left labeled icon input">
            <%= f.password_field :password %>
            <i class="lock icon"></i>
          </div>
          <% if @error %>
              <div class="ui red pointing above ui label">Email或密码不正确</div>
          <% end %>
      <% end %>
      <%= f.submit "登录", id: 'submit', class: 'ui blue submit button' %>
    </div>

<% end %>