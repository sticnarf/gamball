<div class="ui transparent inverted main menu">
  <%= link_to panel_url, :class => "item" do %>
  <i class="user icon"></i>  用户面板
  <% end %>
  <a class="active item">
    <i class="legal icon"></i>  投注大厅
  </a>
  <a class="item">
    <i class="edit icon"></i>  资料设置
  </a>
  <div class="right menu">
    <div class="vertically fitted borderless item">
      <i class="money basic icon"></i>
      <span id="money"><%= current_user.money %></span>
    </div>
    <div class="ui dropdown item">
      <%= current_user.name %>
      <i class="dropdown icon"></i>
      <div class="menu">
        <%= link_to session_path(current_user), :method => :delete, :class => 'item' do %>
        退出
        <i class="sign out icon"></i>
        <% end %>
      </div>
    </div>
  </div>
</div>
<div class="ui grid">
  <div class="two wide column">
    <div class="ui vertical menu">
      <div class="header item">
        <i class="globe icon"></i>
        赛事
      </div>
      <% @leagues.each do |l| %>
      <%= content_tag :a, l.name,
        :class => @active_leagues.include?(l.id) ? "active item league" : "item league",
        :league_id => l.id %>
      <% end %>
    </div>
  </div>
  <div class="fourteen wide column" id="matches_index">
    <i class="massive loading icon"></i>
    <iframe></iframe>
  </div>
</div>