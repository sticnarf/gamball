<%= form_for @user do |f| %>
    <%= f.label :name, '名字' %>
    <%= f.text_field :name %>
    <br/>
    <%= f.label :email, 'Email' %>
    <%= f.text_field :email %>
    <br/>
    <%= f.label :password, '密码' %>
    <%= f.password_field :password %>
    <br/>
    <%= f.label :password_confirmation, "重复密码" %>
    <%= f.password_field :password_confirmation %>
    <br/>
    <%= f.submit "注册", id: 'submit' %>
<% end %>